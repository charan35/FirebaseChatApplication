<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactUs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv1"
            android:text="Contact Us"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="@color/gradStop"
            android:textSize="40dp"
            android:gravity="center"/>

    <!--    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv2"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/tv1"
            android:text="It would be great to hear from you! If you got any questions, please do not hesitate to send us a message. We are looking forward to hearing from you! We reply within 24 hours !"
            android:textSize="20dp"
            android:gravity="center" />-->

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/linear"
        android:layout_marginLeft="5dp"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear1">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:gravity="center"
            android:src="@drawable/ic_local_phone_black_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number"
            android:layout_marginLeft="10dp"
            android:text="+91 7337774647"
            android:textSize="18dp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear1"
        android:id="@+id/linear2"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:gravity="center"
            android:src="@drawable/ic_email_black_24dp"
            android:tint="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailid"
            android:inputType="phone"
            android:layout_marginLeft="10dp"
            android:text="infoalta@altaitsolutions.com"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear2"
        android:id="@+id/linear3"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location"
            android:layout_gravity="center"
            android:src="@drawable/ic_location_on_black_24dp"
            android:tint="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/locationon"
            android:layout_below="@+id/linear2"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:text="Alta IT Solutions,\nSalanhunse,\nKaggalipura Village,\nKanakapura Main Road,\nBengaluru,\nKarnataka-560082"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear3"
        android:id="@+id/linear4"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/website"
            android:layout_gravity="center"
            android:src="@drawable/ic_web_asset_black_24dp"
            android:tint="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/websitelink"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:text="www.altaitsolutions.com"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/l4"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:id="@+id/fb"
            android:layout_weight="1"
            android:src="@drawable/fb"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:id="@+id/insta"
            android:layout_weight="1"
            android:src="@drawable/insta"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:id="@+id/twitter"
            android:layout_weight="1"
            android:src="@drawable/twitter"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:id="@+id/pin"
            android:layout_weight="1"
            android:src="@drawable/pin"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:id="@+id/tumblr"
            android:layout_weight="1"
            android:src="@drawable/tumblr"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:id="@+id/youtube"
            android:layout_weight="1"
            android:src="@drawable/youtube"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:id="@+id/linkedin"
            android:layout_weight="1"
            android:src="@drawable/linkedin"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:id="@+id/googleplus"
            android:layout_weight="1"
            android:src="@drawable/googleplus"
            android:layout_margin="10dp"/>

    </LinearLayout>
</RelativeLayout>