<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/wallpapers"
    tools:context=".Wallpapers">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/black"
        android:layout_marginLeft="10dp"
        android:src="@drawable/blackwallpaper"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/tick"
                android:visibility="gone"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_check_black_24dp" />
        </RelativeLayout>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:id="@+id/blue"
        android:layout_marginRight="10dp"
        android:src="@color/colorPrimary"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/dark"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@color/cardview_dark_background"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/primary"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@color/design_default_color_primary"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear2"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/linear1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/orange"
            android:layout_marginLeft="20dp"
            android:src="@color/orange"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/lightyellow"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@color/lightyellow"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/color1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@color/color1"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/color2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@color/color2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear3"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/linear2"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/color3"
            android:layout_marginLeft="20dp"
            android:src="@color/color3"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/color4"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@color/color4"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/color5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@color/color5"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/color6"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@color/color6"/>
    </LinearLayout>

</RelativeLayout>