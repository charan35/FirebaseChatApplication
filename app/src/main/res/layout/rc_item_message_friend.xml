<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:src="@drawable/default_avata"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/textContentFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corner2"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/imageView3"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000"
        android:layout_toRightOf="@id/imageView3"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="20dp" />

    <ImageView
        android:id="@+id/image_holder1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@id/imageView3"
        android:padding="10dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/imageView3"
        android:src="@drawable/bcg"
        android:visibility="gone"
        tools:ignore="ContentDescription" />
    <ImageButton
        android:id="@+id/documentFriend"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@id/imageView3"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/imageView3" />
    <TextView
        android:visibility="gone"
        android:id="@+id/tvLocationFriend"
        android:layout_marginTop="2dp"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@id/imageView3"
        android:padding="10dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/imageView3"
        android:textColor="@color/dot_inactive_screen4"/>
    <ImageButton
        android:id="@+id/audiofriend"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@id/imageView3"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/imageView3"
        android:src="@drawable/ic_headset_black_24dp"/>
    <ImageButton
        android:id="@+id/videoFriend"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@id/imageView3"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/imageView3"
        android:src="@drawable/ic_video_library_black_24dp"/>




</RelativeLayout>